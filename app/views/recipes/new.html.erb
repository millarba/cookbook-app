<h1>New Recipe</h1>

<%= form_tag "/recipes", method: :post do %>

  <div>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
<!--     Title: <input type="text", name="title"> -->
  </div>

  <div>
    <%= label_tag :chef %>
    <%= text_field_tag :chef %>
  </div>

  <div>
    <%= label_tag :ingredients %>
    <%= text_field_tag :ingredients %>
  </div>

  <div>
    <%= label_tag :directions %>
    <%= text_field_tag :directions %>
  </div>
    <%= submit_tag "Add recipe to book" %>
<!--   <input type="submit", value="Add recipe to book"> -->
<% end %>