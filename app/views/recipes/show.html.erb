<h2>Title: <%= @recipe.title %></h2>
<h5>Updated on: <%= @recipe.friendly_updated_at %></h5>
<h5>Prep time: <%= @recipe.friendly_prep_time %></h5>
<h4>Chef: <%= @recipe.chef %></h4>


<h3>Ingredients</h3>
  <ul>
    <% @recipe.ingredients.split(", ").each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>


<h3>Directions</h3>
<ol>
  <% @recipe.directions.split(", ").each do |direction| %>
  <li><%= direction %></li>
  <% end %>
</ol>


<a href="/recipes">Home</a>
<a href="/recipes/<%= @recipe.id %>/edit">Edit Recipe</a>
<%= form_tag "/recipes/#{@recipe.id}", method: :delete do %>
  <input type="submit", value="Delete Recipe">
<% end %>